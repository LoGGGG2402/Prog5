# Disable directory listing for all directories
Options -Indexes

# Protect sensitive directories (includes and models)
<DirectoryMatch "^/(includes|models)/">
    Order Allow,Deny
    Deny from all
</DirectoryMatch>

# Alternative approach using RewriteEngine
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteRule ^(includes|models)(/.*)?$ - [F,L]
</IfModule>

# Prevent direct access to PHP and other script files in these directories
<FilesMatch "^/(includes|models)/.*\.(php|inc|phtml)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Additional security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
</IfModule>
