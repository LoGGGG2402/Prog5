# Disable directory listing for all directories
Options -Indexes

# Deny direct access by default to all files and folders
<FilesMatch ".*">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Allow direct access only to the avatars directory
<LocationMatch "^/uploads/avatars/">
    Order Allow,Deny
    Allow from all
</LocationMatch>

# Protect against malicious file access
<FilesMatch "\.(?:php|php\d+|phtml|phar|inc|pl|py|jsp|asp|aspx|sh|cgi|htaccess|user\.ini)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Prevent accessing hidden files
<FilesMatch "^\.">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Additional security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
</IfModule>
